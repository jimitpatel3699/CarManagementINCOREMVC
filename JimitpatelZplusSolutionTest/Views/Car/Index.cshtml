@model IEnumerable<JimitpatelZplusSolutionTest.ViewModel.CarCreateVM>
<p>
    <div class="container mt-4">
        <div style="display: flex; justify-content: space-between;">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i> Create New
            </a>
            <div>
                <label>Enter Model Name or Model Code: </label>
                <input type="text" name="search" id="searchtext" />
                <button id="searchbtn" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>
</p>
<div id="DivUpdate">
    @Html.Partial("_Search", Model)
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchbtn').click(function () {
                var searchText = $('#searchtext').val();
                $.ajax({
                    type: 'GET',
                    url: '/Car/SearchCar', // Replace with the actual URL
                    data: { search: searchText },
                    success: function (result) {
                        $('#DivUpdate').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>
}